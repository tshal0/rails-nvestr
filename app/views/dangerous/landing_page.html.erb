<!-- Landing Page for non-users of Nvestr -->


<!-- Introduce the User to Nvestr -->

<div class ="center">

	<h1 class="center jumbotron">Nvestr</h1>
	<h2>
		A simple, social investing simulator. 
	</h2>

</div>

<!-- Allow the User to "Register/Get Started" -->

<div id="registrationDiv">
	<!-- Gonna need a User model. A register_user route.  -->
	<!-- Gonna need required user attributes: Username|Email|Password -->
	<%= form_for User.new, url: register_user_path, remote: true do |f| %> 
		<table align="center" class="table table-striped table-bordered">
			<tbody class ="center">
				<% @required_user_attributes.zip(@header_user_attributes).each do |attribute, header| %>
                <tr>
                  <td><%= header %></td> 
                  <td>
                    <%= f.text_field attribute, class: "form-control" %>
                  </td>
                </tr>
              <% end %>
			</tbody>
		</table>
		<!-- Link to register user. Requires non-dupe password, valid email, password.  -->
		<%= f.submit "Get Started", :id => "registrationBtn", class: "btn btn-large btn-primary center" %>
	<% end %>
</div>

