  <div id="addUser" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 id="modalHeader" class="center">Add User</h4>
      </div>
      <!-- @all_attribs and @header_attribs -->
      <div class="modal-body">
        <%= form_for @user, url: register_user_path, remote: true do |f| %>
          <table align="center" class="table table-striped table-bordered">
            <tbody class="center">
              <% @header_attribs.zip(@all_attribs).each do |header, attribute| %>
                <tr>
                  <td><%= header %></td> 
                  <td>
                    <%= f.text_field attribute, class: "form-control" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= f.submit "Add", :id => "addEquipmentBtn", class: "btn btn-primary" %> 
        <% end %>
      </div>
    </div>
  </div>