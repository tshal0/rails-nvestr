<!-- Page for managing Users.  -->

<% content_for :sidebar do %>
<!-- sidebar content -->
	<%= render :partial => "layouts/sidebar" %>
<% end %>

<div class="manageUser">
	<h1>Users</h1>
	<h3>Manage users here.</h3>

	<table class="table table-line">
		<tbody><tr><td></td></tr></tbody>
	</table>

	<%= link_to add_user_path, :remote => true, class: 'btn btn-primary btn-add-user' do %>
		 <span class="glyphicon"></span>
		 Add User
	<% end %>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr id="<%=	user.user_name %>">
					<td><%= link_to user.user_name, portfolio_path(:id => user.user_name) %> </td>
					<td><%=	user.email %></td>
					<td>Active</td>
					<td>
						<div class="center">

							<%= link_to manage_user_path(:user_name => user.user_name), :remote => true, class: 'btn btn-default' do %>
								 <span class="glyphicon glyphicon-cog"></span>
								 Manage
							<% end %>
							<%= link_to delete_user_path(:user_name => user.user_name), :remote => true, class: 'btn btn-danger' do %>
								 <span class="glyphicon glyphicon-remove"></span>
								 Remove User
							<% end %>
							<%= link_to manage_user_roles_path(:user_name => user.user_name), :remote => true, class: 'btn btn-default' do %>
								 <span class="glyphicon glyphicon-cog"></span>
								 Roles
							<% end %>
						</div>
					</td>
				</tr>
			<% end	%>
		</tbody>
	</table>
</div>